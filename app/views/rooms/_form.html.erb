<%= form_with(model: room, local: true) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :room_no %>
    <%= form.number_field :room_no %>
  </div>

  <!-- <div class="field">
    <%= form.label :is_occupied %>
    <%= form.check_box :is_occupied %>
  </div> -->

  <div class="field">
    <%= form.label :room_type_id %>
    <%= form.select :room_type_id, options_from_collection_for_select(@room_types, :id, :name) unless @room_types.blank? %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
