<div class="container-fluid">
<h3>Search customer</h3>
<%= form_tag "/find_customers" do %>
  <div>
  <span><%= text_field_tag "name", "", :placeholder => "Search by name..", size: 50 %></span>
  <span><%= submit_tag "Submit", :class => "btn btn-primary" %></span>
  </div>
<% end %>


<% unless @matching_customers.blank? %>
  <table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Id card no</th>
      <th>Room</th>
      <th>Check in at</th>
      <th>Check out at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matching_customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.age %></td>
        <td><%= customer.ID_card_no %></td>
        <td><%= customer.room.room_no %></td>
        <td><%= customer.check_in_at %></td>
        <td><%= customer.check_out_at %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td> 
        <td>
          <% if customer.check_out_at.blank? %>
           <%= link_to 'Check out', check_out_customer_path(customer) %>
          <% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 

<% else %>

 <% unless@name.blank? %> 
  <h4> No matching customers found</h4>
 <% end %>
 
<% end %>



</div>