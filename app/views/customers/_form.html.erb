<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
        <% customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :ID_card_no %>
    <%= form.text_field :ID_card_no %>
  </div>

  <div class="field">
    Check-in into
    <%= form.label :room_id %>
    <%= form.select :room_id, options_from_collection_for_select(@available_rooms, :id, :room_no) %>
  </div>

